<script>	$(function() {		$( "#tabs" ).tabs();	});	</script><div id="two_frame">	<div id="frame_l">		__(include file="__($template)__/layout/menu_box.tpl")__	</div>		<div id="frame_r">				__(include file="__($template)__/layout/say.tpl")__				<div class="all_news">			__(foreach name=all_news_information from=$all_news_information item=news_information)__			<div class="news_box">				<div class="news_main">					<div class="news_time">__($news_information.created_time|date_format:"%m月%e日 %H:%m")__</div>					<div class="news_content">						<div class="say_ico">						__($news_information.show)__						</div>					</div>					<div class="clear"></div>				</div>				<div class="clear"></div>			</div>			__(/foreach)__			<div class="clear"></div>		</div>							<div id="tabs">			<ul>				<li><a href="#tabs-1">留言板</a></li>			</ul>						<div id="tabs-1">				<div class="view_member_leave_word_box">					<ul>						__(foreach name=all_member_leave_word_information from=$all_member_leave_word_information item=member_leave_word_information)__						<li>							<div class="member_leave_word_box">								<div class="member_image" style="float:left;"><img src="__($member_leave_word_information.member_image)__" height="40" width="40" /></div>								<div class="content">									<div>										<a href="#" class="member_name">__($member_leave_word_information.member_name)__</a> 留言:									</div>									<div class="leave_word_content">										<div class="say_ico">										__($member_leave_word_information.content)__										</div>									</div>																		<div class="clear"></div>																		__(if ($member_leave_word_information.reply != ''))__									<div class="member_leave_word_reply_box">										<span class="reply_ico">回复</span>&nbsp;:										<span class="reply_content">__($member_leave_word_information.reply)__</span>									</div>									__(/if)__									<div class="clear"></div>								</div>							</div>							<div class="clear"></div>						</li>						__(/foreach)__					</ul>					<div class="clear"></div>				</div>																<div class="add_member_leave_word_box">					<form action="__('member/save_member_leave_word'|site_url)__" method="post">						<h3>留言</h3>						<fieldset>							<textarea id="member_leave_word_content" name="content"></textarea>							<input type="hidden" value="__($member_id)__" name="member_id" />							<input type="submit" class="submit" value="留言"  />						</fieldset>					</form>				</div>							</div>		</div>			</div></div>