<script>var page_offset = 0;var limit = 6;var member_id = '__($member_information.member_id)__';var current_id = 0;$( function(){  __(if $is_me)__  $("#navbar-profile").addClass("active");  __(/if)__   __(if $member_information.member_type=='student')__  showActivities('Attend');  showActivities('Attention');  __(/if)__  showActivities('Publish');} );function showActivities( type ){    $.ajax({      url:"__('base_ajax_action_controller/getCurrent"+type+"Activity'|site_url)__",      data:'member_id='+member_id+'&page_offset='+page_offset+'&limit='+limit,      dataType: "JSON",      success:function(data){        console.log(data);        for(i in data){          current_id++;          var act = '<div class="showcase-item">'+'<a href="__("activity/view"|site_url)__?id='+data[i].activity_id+'">'+'<img src="'+data[i].activity_image+'" class="img-rounded"></a>'+'<h4><a href="__("activity/view"|site_url)__?id='+data[i].activity_id+'">'+data[i].activity_name+'</a></h4>'+'<ul>'+'<li>开始时间: '+data[i].start_time+'</li>'+'<li>结束时间: '+data[i].end_time+'</li>'+'<li>发起人: <a href="__("profile"|site_url)__?id='+data[i].member_id+'">'+data[i].member_name+'</a></li>'+'<li><code>'+data[i].attend_number+'</code>人参与&nbsp;&nbsp;|&nbsp;&nbsp;<code>'+data[i].attention_number+'</code>人关注</li>'+'</ul></div>';          $("#"+type+"-showcase").append( act );        }        page_offset = page_offset + limit;      }          });}function toggleFriend(target_id, deny){    $.getJSON("__('friend/ajaxToggleFriend'|site_url)__?target_id="+target_id+"&deny="+deny,function(data) {      if( !data ) {        alert('Operation failed.');      } else {        window.location.reload();      }    });}</script>