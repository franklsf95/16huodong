<div id="two_frame">	<div id="frame_l">		__(include file="__($template)__/layout/menu_box.tpl")__	</div>		<div id="frame_r">				<script>			$(function() {				$( "#tabs" ).tabs();			});		</script>				<script>			function dealSystemMessage(system_message_id,type,code) {				if (type == 'activity'){					$.getJSON("__('base_ajax_action_controller/updateSystemMessage'|site_url)__?system_message_id="+system_message_id,function(data){						window.location.href=code;					});								}else if (type == 'apply_friend') {					$.getJSON("__('base_ajax_action_controller/addToFriend'|site_url)__?target_id="+code,function(data){						$.getJSON("__('base_ajax_action_controller/updateSystemMessage'|site_url)__?system_message_id="+system_message_id,function(data){							window.location.reload();						});					});									}						}			/*			function goSystemMessage(system_message_id,url){				$.getJSON("__('base_ajax_action_controller/updateSystemMessage'|site_url)__?system_message_id="+system_message_id,function(data){					window.location.href=url;				});			}						function addToFriend(target_id){				$.getJSON("__('base_ajax_action_controller/addToFriend'|site_url)__?target_id="+target_id,function(data){				});			}			*/		</script>				<div id="tabs">			<ul>				<li><a href="#tabs-1">活动通知</a></li>				<li><a href="#tabs-2">好友通知</a></li>			</ul>						<div id="tabs-1" class="index_tabs">				<ul class="activity_message">					__(foreach name=all_activity_system_information from=$all_activity_system_information item=activity_system_information)__					__(if $activity_system_information.type == 'edit_activity')__ __(*修改活动消息*)__					<li>						<a href="#" onclick="dealSystemMessage('__($activity_system_information.system_message_id)__','activity','__('activity/view'|site_url)__?id=__($activity_system_information.activity_id)__')">__($activity_system_information.activity_name)__</a>修改了活动细节					</li>					__(elseif ($activity_system_information.type='publish_activity'))__ __(*发布活动消息*)__					<li>						<a href="__('member'|site_url)__?id=__($activity_system_information.member_id)__">__($activity_system_information.member_name)__</a>发布了<a href="__('activity/view'|site_url)__?id=__($activity_system_information.activity_id)__">__($activity_system_information.activity_name)__</a>					</li>					__(/if)__										__(/foreach)__				</ul>							</div>						<div id="tabs-2" class="index_tabs">								<ul class="friend_message">					__(foreach name=all_member_system_information from=$all_member_system_information item=member_system_information)__					__(if $member_system_information.type == 'apply_friend')__ __(*申请加为好友*)__					<li>						<a href="__('member'|site_url)__?id=__($member_system_information.member_id)__">__($member_system_information.member_name)__</a>申请成为您的好友						<a href="#" onclick="dealSystemMessage('__($member_system_information.system_message_id)__','apply_friend','__($member_system_information.member_id)__')">添加</a>					</li>					__(/if)__										__(/foreach)__				</ul>											</div>					</div>					</div></div>