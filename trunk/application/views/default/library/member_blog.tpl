<script>	var member_id = '__($member_id)__';	var page_offset = 0;	var limit = 9;	var current_id_num = 0;	var image_width = 210;		function getPreferBlog(action_type){		if (action_type == 'add_blog') {			$.ajax({				url:"__('base_ajax_action_controller/getPreferBlogInformation'|site_url)__",				data:'member_id='+member_id+'&page_offset='+0+'&limit='+10,				type: "GET",				dataType: "JSON",				async: false,				success:function(data){					var n = 0;					window.prefer_blog_content = new Array();					for(i in data){						var prefer_blog_show = '<div class=\"prefer_blog_show\" id="prefer_blog_'+n+'" >'+																'<div class=\"image\"><a href=\"__("blog/view"|site_url)__?id='+data[i].member_blog_id+'\"><img src=\"'+data[i].member_blog_image+'\" width=\"105\" height=\"105\"></a></div>'+																'<div class="context">'+																	'<div class="title"><a href="__("blog/view"|site_url)__?id='+data[i].member_blog_id+'">【'+data[i].member_blog_name+'】</a></div>'+																	'<div class="time">出版时间: '+data[i].created_time+'</div>'+																	'<div class="publisher">作者:<a href=\"__("member"|site_url)__?id='+data[i].member_id+'\">'+data[i].member_name+'</a></div>'+																	'<div class=\"number\">'+																		'<div class=\"hits_number\"><span>'+data[i].hits_number+'</span>人阅读</div>'+																		'<div class=\"prefer_number\"><span>'+data[i].prefer_number+'</span>人喜欢</div>'+																	'</div>'+																'</div>'+															'</div>';						prefer_blog_content[n] = prefer_blog_show;						n++;					}					$("#prefer_blog_list").append(prefer_blog_content[0]);					$("#prefer_blog_list").append(prefer_blog_content[1]);										$('#prefer_blog_0,#prefer_blog_1').fadeIn('slow');										current_prefer_blog = 1;				}			});		} else {			if (action_type == 'right'){				$('#prefer_blog_list .prefer_blog_show').fadeOut('slow');				$('#prefer_blog_list .prefer_blog_show').remove();				for (i = 1; i <= 2 ; i++ ){					if (current_prefer_blog + 1 < prefer_blog_content.length) {						current_prefer_blog++;						$("#prefer_blog_list").append(prefer_blog_content[current_prefer_blog]);					} else {						current_prefer_blog = 0;						$("#prefer_blog_list").append(prefer_blog_content[current_prefer_blog]);					}				}				$('#prefer_blog_list .prefer_blog_show').fadeIn('slow');							} else if (action_type == 'left'){								if (current_prefer_blog - 1 > 0) {					current_prefer_blog = current_prefer_blog - 1;				} else {					current_prefer_blog = current_prefer_blog + prefer_blog_content.length - 1;				}									for (i = 1; i <= 2 ; i++ ){					if (current_prefer_blog - 1 >= 0) {						current_prefer_blog--;						$("#prefer_blog_list").prepend(prefer_blog_content[current_prefer_blog]);					} else {						current_prefer_blog = prefer_blog_content.length - 1;						$("#prefer_blog_list").prepend(prefer_blog_content[current_prefer_blog]);					}				}								if (current_prefer_blog + 1 <= prefer_blog_content.length - 1) {					current_prefer_blog++;				} else {					current_prefer_blog = prefer_blog_content.length - 1;				}								$('#prefer_blog_list .prefer_blog_show').fadeIn('slow');							}		}	}		$(function(){				//导航提示		$('#nav_03').css('color','#ad4c4c');				getPreferBlog('add_blog');	});	</script><div id="page_frame">	<div class="left_side">		__(include file="__($template)__/layout/menu_box.tpl")__	</div>		<div class="right_side" id="blog_page">				<h4>Ta喜欢的</h4>				<div id="prefer_blog_list">			<div class="arrows_left"><img src="__($config.template_prefix)__images/ico/arrows_left.gif" onclick="getPreferBlog('left')" ></div>			<div class="arrows_right"><img src="__($config.template_prefix)__images/ico/arrows_right.gif" onclick="getPreferBlog('right')" ></div>		</div>				<h4>Ta撰写的</h4>		<div id="my_blog_list">			<ul>				__(foreach from=$all_member_blog_information item=member_blog_information)__				<li>					<a class="name" href="__('blog/view'|site_url)__?id=__($member_blog_information.member_blog_id)__">__($member_blog_information.member_blog_name)__</a>					<div class="tools">					</div>										<div class="clear"></div>					<span class="time">__($member_blog_information.created_time)__</span>					<div class="description">						__($member_blog_information.content)__					</div>					<div class="clear"></div>												</li>				__(/foreach)__			</ul>						<div class="pagination">			__(assign var="index_page_name" value="blog/my_blog")__			__(include file="$template/layout/pagination.tpl")__			</div>					</div>					</div></div>