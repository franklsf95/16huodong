<ul class="breadcrumb">  <li><a href="{'profile'|site_url}?id={$member_id}">{$member_name}</a> <span class="divider">/</span></li>  <li{if $type=='p'} class="active">发起的活动{else}><a href="{'profile/history/p'|site_url}?member_id={$member_id}">发起的活动</a>{/if}<span class="divider">-</span></li>  <li{if $type=='a'} class="active">参加的活动{else}><a href="{'profile/history/a'|site_url}?member_id={$member_id}">参加的活动</a>{/if}<span class="divider">-</span></li>  <li{if $type=='f'} class="active">关注的活动{else}><a href="{'profile/history/f'|site_url}?member_id={$member_id}">关注的活动</a>{/if}</li></ul><div class="history-container"><div class="content-heading">{$title}</div><hr>{foreach $history as $i}<div class="history-item id=item-{$i.activity_id}"><a href="{'activity/view'|site_url}?id={$i.activity_id}"><img src="{$i.activity_image}" class="activity-cover"></a><div class="item-description">	<h4><a href="{'activity/view'|site_url}?id={$i.activity_id}">{$i.activity_name}</a></h4>	<ul>		<li>时间: {$i.start_time} - {$i.end_time}</li>		<li>发起人: <a href="{'member'|site_url}?id={$i.member_id}">{$i.member_name}</a></li>		<li><code>{$i.attend_count}</code>人参与&nbsp;&nbsp;|&nbsp;&nbsp;<code>{$i.follow_count}</code>人关注</li>		<li>描述: {$i.description}</li>	</ul></div></div><hr>{/foreach}</div><!--/history-container--><div class="clear"></div>{if $page_information.count > 0}<div class="pagination">	{include file="common/pagination.tpl"}</div>{/if}