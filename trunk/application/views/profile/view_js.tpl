<script src="{$config.asset}/js/jquery.masonry.min.js"></script><script src="{$config.asset}/js/waterfall.js"></script><script>var Type = 'PublishActivity';var disableHref = {if $is_friend!=1}true{else}false{/if};$( function(){  {if $is_me}    $("#navbar-profile").addClass("active");  {/if}  startItems();});$(window).scroll(function() {  var top = document.documentElement.scrollTop + document.body.scrollTop;  var bodyheight = $(document).height();  if (bodyheight - top - $(window).height() <= 100) {    continueItems();  }});$('.nav-tabs li[id]').click( function() {  $('.nav-tabs li').removeClass('active');  $(this).addClass('active');  Type = $(this).attr('id');  startItems();});$('#btn-leave-message').click(function() {  if( disableHref ) return false;})$('#btn-leave-message[disabled]').tooltip({  title : '只有好友才可以留言~',  placement: 'bottom',  trigger: 'hover'});function startItems() {  var itemType = ( Type.indexOf('Book')==-1 ) ? 'activity' : 'book';  Waterfall( "{'profile/ajaxGet"+Type+"'|site_url}?member_id={$member_information.member_id}", 'start', { type:itemType } );}function continueItems() {  var itemType = ( Type.indexOf('Book')==-1 ) ? 'activity' : 'book';  Waterfall( "{'profile/ajaxGet"+Type+"'|site_url}?member_id={$member_information.member_id}", 'continue', { type:itemType } );}function toggleFriend(target_id, deny){    $.getJSON("{'friend/ajaxToggleFriend'|site_url}/"+target_id+"/"+deny,function(data) {      if( !data ) {        globalAlert('操作失败!','error');      } else if( data==1 ) {        globalAlert('成功通过了好友请求！','success');        $('#btn-friend-1').html('解除好友关系');        $('#btn-friend-2').hide();        $('#btn-leave-message').attr('disabled',false); disableHref = true;      } else if( data==2 ) {        globalAlert('成功提交了好友请求！','success');        $('#btn-friend-1').html('已发送好友申请').attr('disabled',true);      } else if( data==-1 ) {        globalAlert('成功解除了好友关系！');        $('#btn-friend-1').html('+ 加好友');        $('#btn-leave-message').attr('disabled',true); disableHref = true;      } else if( data==-2 ) {        globalAlert('成功拒绝了好友请求！');        $('#btn-friend-1').html('+ 加好友');        $('#btn-friend-2').hide();      }    });}</script>