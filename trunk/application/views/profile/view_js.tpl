<script>var page_offset = 0;var limit = 6;var member_id = '{$member_information.member_id}';var current_id = 0;$( function(){  {if $is_me}    $("#navbar-profile").addClass("active");  {/if}   {if $member_information.member_type=='stu'}    showActivities('Attend');    showActivities('Follow');  {/if}    showActivities('Publish');} );function showActivities( type ){    $.ajax({      url:"{'profile/ajaxGetCurrent"+type+"Activity'|site_url}",      data:'member_id='+member_id+'&page_offset='+page_offset+'&limit='+limit,      dataType: "JSON",      success:function(data){        for(i in data){          current_id++;          var act = '<div class="showcase-item">'+'<a href="{"activity/view"|site_url}?id='+data[i].activity_id+'">'+'<img src="'+data[i].activity_image+'" class="img-rounded"></a>'+'<h4><a href="{"activity/view"|site_url}?id='+data[i].activity_id+'">'+data[i].activity_name+'</a></h4>'+'<ul>'+'<li>开始时间: '+data[i].start_time+'</li>'+'<li>结束时间: '+data[i].end_time+'</li>'+'<li>发起人: <a href="{"profile"|site_url}?id='+data[i].publisher_id+'">'+data[i].publisher_name+'</a></li>'+'<li><code>'+data[i].attend_count+'</code>人参与&nbsp;&nbsp;|&nbsp;&nbsp;<code>'+data[i].follow_count+'</code>人关注</li>'+'</ul></div>';          $("#"+type+"-showcase").append( act );        }        page_offset = page_offset + limit;      }          });}function toggleFriend(target_id, deny){    $.getJSON("{'friend/ajaxToggleFriend'|site_url}?target_id="+target_id+"&deny="+deny,function(data) {      if( !data ) {        alert('Operation failed.');      } else {        window.location.reload();      }    });}</script>