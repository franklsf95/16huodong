<script>	$(function() {		var editor = KindEditor.editor({					allowFileManager : false,				});				KindEditor('#image').click(function() {			//editor.uploadJson = '{$config.application_inc}kindeditor/php/upload_photo_json.php',			editor.loadPlugin('image', function() {				editor.plugin.imageDialog({					imageUrl : KindEditor('#image').val(),					clickFn : function(url, title, width, height, border, align) {						KindEditor('#image').val(url);						editor.hideDialog();					}				});			});		});				KindEditor('#album_image').click(function() {			//editor.uploadJson = '{$config.application_inc}kindeditor/php/upload_photo_json.php',			editor.loadPlugin('image', function() {				editor.plugin.imageDialog({					imageUrl : KindEditor('#album_image').val(),					clickFn : function(url, title, width, height, border, align) {						KindEditor('#album_image').val(url);						editor.hideDialog();					}				});			});		});				getMemberAlbum();								$( "#dialog_box" ).dialog({			autoOpen: false,			show: "blind",			hide: "explode",			buttons: {"确认":function(){						addMemberAlbum();					},					"取消":function(){						$( "#dialog_box" ).dialog( "close" );					}			}		});						$( "#addMemberAlbum" ).click(function() {			$( "#dialog_box" ).dialog( "open" );			return false;		});			});</script><script>	function getMemberAlbum(){		$.getJSON("{'base_ajax_action_controller/getMemberAlbum'|site_url}",function(data){			$("#member_album_id").empty();			var options = '<option value="0">默认分类</option>';			$("#member_album_id").append(options);			for (i in data){				options = '<option value="'+data[i].member_album_id+'">'+data[i].name+'</option>';				$("#member_album_id").append(options);			}		});	}		function addMemberAlbum(){		var album_name = $("#album_name").val();		var album_image = $("#album_image").val();		var album_description = $("#album_description").val();		$.ajax({			url:"{'base_ajax_action_controller/addMemberAlbum'|site_url}",			data:{'name':album_name,'image':album_image,'description':album_description},			type:'POST',			dataType:'json',			success:function(data){				$( "#dialog_box" ).dialog( "close" );				getMemberAlbum();			}		});	}</script><div id="two_frame">	<div id="frame_l">		{include file="{$template}/layout/menu_box.tpl"}	</div>		<div id="frame_r">				<div class="edit_photo_box">						<form action="{'album/save_form'|site_url}" method="post">				<fieldset>					<p>						<label>标题:</label>						<input name="name" id="name" type="text" value="{$member_photo_information.name}" />					</p>										<p>						<label>相册:</label>						<select name="member_album_id" id="member_album_id"></select>						<a id="addMemberAlbum" href="#" class="add_class_button">新建相册</a>					</p>										<p>						<label>图片:</label>						<input name="image" id="image" type="text" value="{$member_photo_information.image}">					</p>										<p>						<label>描述:</label>						<textarea name="description">{$member_photo_information.description}</textarea>					</p>										<input type="hidden" value="{$cid}" name="cid" id="cid" />					<p><input type="submit" value="发布" class="submit"></p>									<fieldset>			</form>												<div class="add_member_album_box" title="新增相册" id="dialog_box" style="display:none;">				<fieldset>					<p>						<label>相册名称:</label>						<input name="album_name" type="text" id="album_name" />					</p>										<p>						<label>封面:</label>						<input name="album_image" type="text" id="album_image" />					</p>										<p>						<label>简介:</label>						<textarea name="album_description" id="album_description"></textarea>					</p>									</fieldset>			</div>											</div>							</div></div>