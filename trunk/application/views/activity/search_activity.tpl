<div id="search_frame">	<div class="left_side">		{include file="{$template}/layout/menu_box.tpl"}	</div>		<div class="right_side">		<script>			$(function(){				$( "#search_activity_box" ).accordion({					collapsible: true,					active: false,				});								$( "#tabs" ).tabs();			});		</script>				<script>			function addToFriend(friend_id){				$.getJSON("{'base_ajax_action_controller/addToFriend'|site_url}?friend_id="+friend_id,function(data){														});			}				</script>				<div class="search_activity_box" id="search_activity_box">			<h3><a href="#" style="color:#FFFFFF;">查找</a></h3>			<div>				<form action="{'activity/search_activity'|site_url}" method="get">					<fieldset>						<p>							<label>活动名称:</label>							<input name="search[activity_name]" type="text"/>						</p>												<p>							<label>发布者:</label>							<input name="search[member_name]" type="text"/>						</p>												<p><input type="submit" value="select" class="submit"></p>					</fieldset>				</form>			</div>		</div>				<div id="tabs">			<ul>				<li><a href="#tabs-1">搜索结果</a></li>			</ul>						<div id="tabs-1" class="index_tabs">				<div class="search_activity_list_box">					<ul>						{foreach name=all_search_activity_information from=$all_search_activity_information item=search_activity_information}						<li>							<div class="search_activity_list">								<div class="activity_name"><a href="{'activity/view'|site_url}?id={$search_activity_information.activity_id}">{$search_activity_information.activity_name}</a></div>								<div class="activity_description">									<div class="activity_ico">										{$search_activity_information.description}									</div>								</div>								<div class="clear"></div>							</div>							<div class="clear"></div>						</li>						{/foreach}					</ul>									</div>			</div>		</div>			</div></div>