<script>$( function(){	$("#navbar-activity").addClass("active");    showActivities();});$(window).scroll(function() {	var top = document.documentElement.scrollTop + document.body.scrollTop;	var bodyheight = $(document).height();	if (bodyheight - top - $(window).height() <= 100) {		showActivities();	}});$(".tag").click(function() {	reloadActivities( $(this).html() );});function showActivities() {	updateWaterfall( "{'activity/ajaxGetLatestActivities'|site_url}", wrapActivity );}function reloadActivities( tag ) {	$('#waterfall').empty();	updateWaterfall( "{'activity/ajaxGetActivityInformationByTag'|site_url}?tag="+tag, wrapActivity );}function wrapActivity( id, act ) {	var str = '<li class="wm-item" id="item-'+id+'">'+'<a href="{"activity/view"|site_url}?id='+act.activity_id+'">'+'<img src="'+act.activity_image+'" class="img-rounded"></a>'+'<h4><a href="{"activity/view"|site_url}?id='+act.activity_id+'">'+act.activity_name+'</a></h4>'+'<div class="wm-ul">'+'<div>开始时间: '+act.start_time+'</div>'+'<div>结束时间: '+act.end_time+'</div>'+'<div>发起人: <a href="{"profile"|site_url}?id='+act.publisher_id+'">'+act.publisher_name+'</a></div>'+'<div><code>'+act.attend_count+'</code>人参与&nbsp;&nbsp;|&nbsp;&nbsp;<code>'+act.follow_count+'</code>人关注</div>'+'</div></li>';	return str;}</script>