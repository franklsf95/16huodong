<script src="{$config.asset}/js/jquery.masonry.min.js"></script><script src="{$config.asset}/js/waterfall.js"></script><script>$( function(){	$("#navbar-activity").addClass("active");    showActivities();});$(window).scroll(function() {	var top = document.documentElement.scrollTop + document.body.scrollTop;	var bodyheight = $(document).height();	if (bodyheight - top - $(window).height() <= 100) {		showActivities();	}});$(".tag:not(#tag-all)").click(function() {	reloadActivities( $(this).html() );});$("#tag-all").click(function() {	resetWaterfall();	showActivities();});function showActivities() {	updateWaterfall( "{'activity/ajaxGetLatestActivities'|site_url}", wrapActivity );}function reloadActivities( tag ) {	refillWaterfall( "{'activity/ajaxGetActivityInformationByTag'|site_url}?tag="+tag, wrapActivity );}</script>