<div class="search-result-container">	<div class="content-heading">活动搜索结果</div>	<hr>{foreach $all_activities as $i}<div class="result-item"><a href="{'activity/view'|site_url}?id={$i.activity_id}"><img src="{$i.activity_image}" class="activity-cover"></a>	<div class="item-description">		<h4><a href="{'activity/view'|site_url}?id={$i.activity_id}">{$i.activity_name}</a></h4>		<ul>			<li>时间: {$i.start_time} - {$i.end_time}</li>			<li>发起人: <a href="{'member'|site_url}?id={$i.member_id}">{$i.member_name}</a></li>			<li><code>{$i.attend_count}</code>人参与&nbsp;&nbsp;|&nbsp;&nbsp;<code>{$i.follow_count}</code>人关注</li>			<li>描述: {$i.description}</li>		</ul>	</div></div><hr>{/foreach}</div><!--/search-result-container-->{if $page_information.count > 0}<div class="pagination">	{include file="common/pagination.tpl"}</div>{/if}