{if $member_blog_information.member_blog_id }<ul class="breadcrumb">  <li><a href="{'profile'|site_url}?id={$member_blog_information.member_id}">{$member_blog_information.member_name}</a> <span class="divider">/</span></li>  <li><a href="{'profile'|site_url}?id={$member_blog_information.member_id}">{$member_blog_information.member_name}的图书馆</a> <span class="divider">/</span></li>  <li><a href="{'library/view'|site_url}?id={$member_blog_information.member_blog_id}">{$member_blog_information.name}</a> <span class="divider">/</span></li>  <li class="active">编辑微型书</li></ul>{/if}<form class="form-horizontal" id="book-form" action="{'library/save_form'|site_url}" method="post"><fieldset>  <input type="hidden" name="book_id" value="{$member_blog_information.member_blog_id}"><legend>{if $member_blog_information.member_blog_id }编辑微型书：{$member_blog_information.name} {else}发起新活动~{/if}</legend>  <div class="control-group">    <label class="control-label" for="name">书题</label>    <div class="controls">      <input type="text" class="input-xxlarge" id="name" name="name" value="{$member_blog_information.name}">    </div>  </div>  <div class="control-group">    <label class="control-label" for="actLocation">封面图片</label>    <div class="controls">      <img class="img-polaroid cover-view" id="cover-view" src="{$member_blog_information.image}" alt="cover-view" />      <div style="padding-top: 10px">        <span class="btn btn-file cover-upload">上传封面</span>        <input type="hidden" id="cover-url" name="image" value="{$member_blog_information.image}">      </div>    </div>  </div>  <div class="control-group">    <label class="control-label" for="actContext">创作空间</label>    <div class="controls">      <textarea rows=20 id="actContext" class="richtext span6" placeholder="Enter text ..." name="content">{$member_blog_information.content}</textarea>    </div>  </div>  <input type="hidden" value="{$member_blog_information.activity_id}" name="cid" id="cid" />  <div class="span5 offset2">    <button type="submit" class="btn btn-primary btn-block">{if $member_blog_information.member_blog_id }提交修改{else}发表大作!{/if}</button>  </div></fieldset></form>