<script src="{$config.asset}/js/jquery.masonry.min.js"></script><script src="{$config.asset}/js/waterfall.js"></script><script>$( function(){    $("#navbar-library").addClass("active");    showBooks();});$(window).scroll(function() {	var top = document.documentElement.scrollTop + document.body.scrollTop;	var bodyheight = $(document).height();	if (bodyheight - top - $(window).height() <= 100) {		showBooks();	}});function showBooks(){	updateWaterfall( "{'library/ajaxGetLatestBooks'|site_url}", { type:'book' } );}</script>