<script src="{$config.asset}/js/jquery.masonry.min.js"></script><script src="{$config.asset}/js/waterfall.js"></script><script>$( function(){    $("#navbar-library").addClass("active");    startBooks();});$(window).scroll(function() {	var top = document.documentElement.scrollTop + document.body.scrollTop;	var bodyheight = $(document).height();	if (bodyheight - top - $(window).height() <= 100) {		continueBooks();	}});function startBooks(){	updateWaterfall( "{'library/ajaxGetLatestBooks'|site_url}", 'start', { type:'book' } );}function continueBooks(){	updateWaterfall( "{'library/ajaxGetLatestBooks'|site_url}", 'continue', { type:'book' } );}</script>