<script>function attendActivity(activity_id) {    $.getJSON("__('activity/attendActivity'|site_url)__?id="+activity_id,function(data){      if( data ) {      	if( data==1 )      		alert('成功报名活动！');      	else if( data==2 )      		alert('成功取消报名！');      }      window.location.reload();    });}function followActivity(activity_id) {    $.getJSON("__('activity/followActivity'|site_url)__?id="+activity_id,function(data){      if( data ) {      	if( data==1 )      		alert('成功关注活动！');      	else if( data==2 )      		alert('成功取消关注！');      }      window.location.reload();    });}  </script>