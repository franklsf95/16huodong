<script>	$(function() {		//导航提示		$('#nav_11').css('color','#ad4c4c');				$( "#tabs" ).tabs();		$( "#start_time" ).datepicker({dateFormat:'yy-mm-dd',changeMonth: true,changeYear: true});		$( "#end_time" ).datepicker({dateFormat:'yy-mm-dd',changeMonth: true,changeYear: true});				var editor = KindEditor.create('#content', {resizeType : 1,													items : [														'fontsize', 'forecolor', 'hilitecolor', 'bold', 'italic', 'underline',														'removeformat', '|', 'justifyleft', 'justifycenter', 'justifyright', 'insertorderedlist',														'insertunorderedlist', '|', 'emoticons', 'image', 'link']													});		var editor2 = KindEditor.editor({allowImageParameter : false});				$('#image').click(function() {			editor2.loadPlugin('image', function() {				editor2.plugin.imageDialog({					imageUrl : $('#image').val(),										clickFn : function(url, title, width, height, border, align) {						$('#image').val(url);						editor2.hideDialog();					}				});			});		});				$("form").validationEngine();		$(":input").focus(function(){			$(this).validationEngine('hide');		});				$("#tag_input").focus(function(){			if($(this).val() == '推荐标签:公益,慈善'){				$(this).val('');			}		});				$("#tag_input").blur(function(){			if($(this).val() == ''){				$(this).val('推荐标签:公益,慈善');			}		});				$("#add_tag").click(function(){			if($("#tag_input").val() != '' && $("#tag_input").val() != '推荐标签:公益,慈善'){				a_tag = '<a onclick="removeTag(this)">'+$("#tag_input").val()+'<input type="hidden" name="tag[]" value="'+$("#tag_input").val()+'" /></a>';				$("#tag_box").append(a_tag);				$("#tag_input").val('');				$("#tag_input").focus();			}		});			});</script><script>	function getMemberBlogInformation(member_blog_id){		$.getJSON("__('base_ajax_action_controller/getMemberBlogInformation'|site_url)__?member_blog_id="+member_blog_id,function(data){			$("#member_blog_name").html(data.name);		});	}		function getMemberAlbumInformation(member_album_id){		$.getJSON("__('base_ajax_action_controller/getMemberAlbumInformation'|site_url)__?member_album_id="+member_album_id,function(data){			$("#member_album_name").html(data.name);		});	}		function removeTag(tag){		$(tag).remove();	}	</script><div id="page_frame">	<div class="left_side">		__(include file="__($template)__/layout/menu_box.tpl")__	</div>		<div class="right_side">		<div id="tabs">			<ul>				<li><a href="#tabs-1">发布活动</a></li>				<li><a href="#tabs-2">邀请好友</a></li>				<!--li><a href="#tabs-3">关联日志</a></li-->				<!--li><a href="#tabs-4">关联相册</a></li-->			</ul>						<div id="tabs-1" class="index_tabs">				<form action="__('activity/save_form'|site_url)__" method="post">				<div class="edit_activity_box">					<fieldset>						<p>							<label>活动名称:</label>							<input name="name" class="validate[required]" id="name" type="text" style="width:540px;" value="__($activity_information.name)__"/>						</p>												<p>							<label>活动时间:</label>							<input name="start_time" class="time validate[required,custom[date]] datepicker" id="start_time" type="text" value="__($activity_information.start_time|date_format:'%Y-%m-%d')__" /> - <input name="end_time" class="time validate[required,custom[date],future[start_time] datepicker" id="end_time" type="text" value="__($activity_information.end_time|date_format:'%Y-%m-%d')__" />						</p>												<p>							<label>活动费用:</label>							<input name="price" id="price" type="text" value="__($activity_information.price|default:'0')__" />						</p>												<p>							<label>地点:</label>							<input name="address" id="address" class="validate[required]" style="width:540px;"  type="text" value="__($activity_information.address)__" />						</p>												<p>							<label>活动图片:</label>							<input id="image" name="image" value="__($activity_information.image)__" class="validate[required]" /><span class="prompt">*如果上传漂亮的图片，活动会更加吸引眼球的哦(图片不能超过500K)</span>						</p>												<p>							<label>活动描述:</label>							<textarea name="description" >__($activity_information.description)__</textarea>						</p>												<p style="height:auto;">							<label>活动标签:</label><span id="tag_box">__(foreach from=$activity_information.tag item=tag)__<a  onclick="removeTag(this)">__($tag)__<input type="hidden" name="tag[]" value="__($tag)__" /></a>__(/foreach)__</span>							<span class="add_tag_box"><input type="text" id="tag_input" value="推荐标签:公益,慈善" /><a id="add_tag">+</a></span>						</p>												<p>							<label>活动详细内容:</label>							<textarea name="content" id="content" style="height:400px;" >__($activity_information.content)__</textarea>						</p>						<input type="hidden" value="__($cid)__" name="cid" id="cid" />						<p><input type="submit" value="发布" class="submit"></p>					</fieldset>				</div>				<div class="clear"></div>			</div>						<div id="tabs-2" class="index_tabs">				<ul class="invite_friend_attend_activity">					__(foreach name=all_member_friend_information from=$all_member_friend_information item=member_friend_information)__					<li>						<div class="member_information">							<div class="member_image"><a href="__('member'|site_url)__?id=__($member_friend_information.member_id)__"><img src="__($member_friend_information.member_image)__" height="150" width="150" /></a></div>							<a class="member_name" href="__('member'|site_url)__?id=__($member_friend_information.member_id)__">__($member_friend_information.member_name)__</a>							<div class="checkbox"><input type="checkbox" name="invite_member[]" value="__($member_friend_information.member_id)__" /></div>						</div>					</li>					__(/foreach)__					<div class="clear"></div>				</ul>			</div>						<!--div id="tabs-3" class="index_tabs">				<div id="member_blog_name"></div>				<input id="member_blog_id" type="text" onblur="getMemberBlogInformation(this.value)" /> <a href="#" onclick="">插入</a>							</div-->						<!--div id="tabs-4" class="index_tabs">				<div id="member_album_name"></div>				<input id="member_album_id" type="text" onblur="getMemberAlbumInformation(this.value)" /> <a href="#" onclick="">插入</a>							</div-->						</form>		</div>		</div></div>