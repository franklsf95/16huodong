<script>	function addToPreferBlog(member_blog_id){		$.getJSON("__('base_ajax_action_controller/addToPreferBlog'|site_url)__?member_blog_id="+member_blog_id,function(data){			alert(data.str);		});	}		function addBlogComment(){		member_blog_id = '__($member_blog_information.member_blog_id)__';		content = $("#blog_comment").val();		if (content == '') {alert('内容不能为空'); return false;}		$.ajax({			url:'__("base_ajax_action_controller/addBlogComment"|site_url)__',			async: false,			type:'POST',			data: 'member_blog_id='+member_blog_id+'&content='+content,			dataType:'json',			success:function(blog_comment){				comment_box = '<li>'+								'<div class="blog_comment_box">'+									'<div class="member_image" style="float:left;"><img src="'+blog_comment.member_image+'" height="40" width="40" /></div>'+									'<div class="content">'+										'<div>'+											'<a href="__("member"|site_url)__?id='+blog_comment.member_id+'" class="member_name">'+blog_comment.member_name+'</a> 评论:'+										'</div>'+										'<div class="comment_content">'+											'<div class="say_ico">'+blog_comment.content+'</div>'+										'</div>'+										'<div class="clear"></div>'+									'</div>'+								'</div>'+								'<div class="clear"></div>'+							'</li>';				$("#view_blog_comment > ul").prepend(comment_box);				$("#blog_comment").val('');			}		});	}		function getBlogComment(page){		member_blog_id = __($member_blog_information.member_blog_id)__;		limit = __($page_information.limit)__;		page_offset = (page-1) * limit;		//alert();		$.getJSON("__('base_ajax_action_controller/getBlogCommentInformation'|site_url)__?member_blog_id="+member_blog_id+"&limit="+limit+"&page_offset="+page_offset,function(data){			$("#view_blog_comment > ul").empty();			for (i in data){				comment_box = '<li>'+								'<div class="blog_comment_box">'+									'<div class="member_image" style="float:left;"><img src="'+data[i].member_image+'" height="40" width="40" /></div>'+									'<div class="content">'+										'<div>'+											'<a href="__("member"|site_url)__?id='+data[i].member_id+'" class="member_name">'+data[i].member_name+'</a> 评论:'+										'</div>'+										'<div class="comment_content">'+											'<div class="say_ico">'+data[i].content+'</div>'+										'</div>'+										'<div class="clear"></div>'+									'</div>'+								'</div>'+								'<div class="clear"></div>'+							'</li>';				$("#view_blog_comment > ul").append(comment_box);			}		})		return false;			}			$(function(){				//导航提示		$('#nav_03').css('color','#ad4c4c');				$("#addBlogComment").click(function(){			addBlogComment();		});				$('.ajax_pagination').jqPagination({			paged: function(page) {				getBlogComment(page);			}		});		});</script><div id="page_frame">	<div class="left_side">		__(include file="__($template)__/layout/menu_box.tpl")__	</div>		<div class="right_side" id="blog_page">				<div class="location">			<a href="__('member'|site_url)__?id=__($member_blog_information.member_id)__">__($member_blog_information.member_name)__</a> > <a href="__('blog/member_blog'|site_url)__?member_id=__($member_blog_information.member_id)__">__($member_blog_information.member_name)__的日志</a> > <a>__($member_blog_information.member_blog_name)__</a>		</div>				<div class="tools">			<div class="prefer" onclick="addToPreferBlog('__($member_blog_information.member_blog_id)__')"><span>喜欢</span></div>			<div class="share"><span>分享</span></div>		</div>				<div class="clear"></div>				<div class="view_blog_box">			<div class="blog_name">书名:__($member_blog_information.member_blog_name)__</div>			<div class="publihser">作者:__($member_blog_information.member_name)__</div>			<div class="image"><img src="__($member_blog_information.member_blog_image)__" /></div>			<div class="blog_content">__($member_blog_information.member_blog_content)__</div>			<div class="number">				<div class="hits_number"><span>__($member_blog_information.visit_number)__</span>人阅读</div>				<div class="prefer_number"><span>__($member_blog_information.prefer_number)__</span>人喜欢</div>			</div>						<div class="view_blog_comment" id="view_blog_comment">				<ul>				__(foreach name=all_blog_comment_information from=$member_blog_information.all_blog_comment_information item=blog_comment_information)__					<li>						<div class="blog_comment_box">							<div class="member_image" style="float:left;"><img src="__($blog_comment_information.member_image)__" height="40" width="40" /></div>							<div class="content">								<div>									<a href="__('member'|site_url)__?id=__($blog_comment_information.member_id)__" class="member_name">__($blog_comment_information.member_name)__</a> 评论:								</div>								<div class="comment_content">									<div class="say_ico">									__($blog_comment_information.content)__									</div>								</div>																<div class="clear"></div>							</div>						</div>						<div class="clear"></div>					</li>				__(/foreach)__				</ul>				<div class="ajax_pagination">						<a href="#" class="first" data-action="first">&laquo;</a>						<a href="#" class="previous" data-action="previous">&lsaquo;</a>						<input type="text" readonly="readonly" data-max-page="__($page_information.last_page)__" />						<a href="#" class="next" data-action="next">&rsaquo;</a>						<a href="#" class="last" data-action="last">&raquo;</a>				</div>			</div>						<div class="clear"></div>						<div class="add_blog_comment">				<form action="__('blog/save_comment'|site_url)__" method="post" onsubmit="return false;">				<p><textarea id="blog_comment" name="blog_comment"></textarea></p>				<p><input type="hidden" id="member_blog_id" name="member_blog_id" value="__($member_blog_information.member_blog_id)__" /></p>				<p><button type="submit" class="submit" id="addBlogComment" >发表评论</button></p>				</form>			</div>					</div>									</div></div>