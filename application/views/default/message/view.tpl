<script>	$(function(){		//导航提示		$('#nav_06').css('color','#ad4c4c');				$("#addMemberMessageForm").submit(function(){			$(this).ajaxSubmit();			window.location.reload();			return false;		});				$("form").validationEngine();				$(":input").focus(function(){			$(this).validationEngine('hide');		});	});</script><div id="page_frame">	<div class="left_side">		__(include file="__($template)__/layout/menu_box.tpl")__	</div>		<div class="right_side">				<div class="member_message_view">			<ul>				<li>					<div class="add_member_message">						<form name="addMemberMessageForm" id="addMemberMessageForm" action="__('message/save_form'|site_url)__" method="post">							<p><span class="title">收件人:</span>__($member_base_information.member_name)__</p>							<p><textarea name="message_content" class="validate[required]" id="message_content"></textarea></p>							<p><input type="submit" class="submit" value="留言" /></p>							<input name="member_id" type="hidden" value="__($member_base_information.member_id)__"/>						</form>					</div>				</li>							__(foreach name=all_member_message_information from=$all_member_message_information item=member_message_information)__				<li>					<div class="member_message">						<div class="member_image"><img src="__($member_message_information.member_image)__" height="40" width="40" /></div>						<div class="content">							<p>								<a href="__('member'|site_url)__?id=__($member_message_information.member_id)__" class="member_name">__($member_message_information.member_name)__</a> :__($member_message_information.content)__							</p>							<div class="clear"></div>						</div>					</div>				</li>				__(/foreach)__						</ul>		</div>			</div></div>