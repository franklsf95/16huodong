<script>$("#navbar-index").addClass("active");var page_offset = 0;var limit = 20;var refresh_lock = false;$( function(){    showNewsFeed();});$(window).scroll(function() {	if (document.body.clientHeight - document.documentElement.scrollTop -  document.documentElement.clientHeight <= 10 )		showNewsFeed();});function showNewsFeed() {	if (!refresh_lock) {		refresh_lock = true;		$.getJSON("{'index/ajaxGetAllNewsFeed'|site_url}", {			"page_offset": page_offset,			"limit": limit		}, function(data) {			for(i in data) {				$("#news-feed-container").append( wrapNewsFeed( i+1, data[i]) );			}			page_offset += limit;			refresh_lock = false;		});	}}function wrapNewsFeed( id, news ) {	var a = '<div class="news-feed-item">'+news.msg+'</div>';	return a;}</script>