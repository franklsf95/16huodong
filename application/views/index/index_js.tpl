<script src="{$config.asset}/js/jquery.bxSlider.min.js"></script><script src="{$config.asset}/js/jquery.masonry.min.js"></script><script src="{$config.asset}/js/waterfall.js"></script><script>$("#navbar-index").addClass("active");$(".slider").bxSlider();$( function(){    showNewsFeed();});$(window).scroll(function() {	var top = document.documentElement.scrollTop + document.body.scrollTop;	var bodyheight = $(document).height();	if (bodyheight - top - $(window).height() <= 100) {		showNewsFeed();	}});function showNewsFeed() {	updateWaterfall( "{'index/ajaxGetNewsFeed'|site_url}", wrapNewsItem );}function wrapNewsItem( id, data ) {	var href, item_name, item_image;	if( data.activity_id > 0 ) {		href = '"{"activity/view"|site_url}?id='+data.activity_id+'"';		item_name = data.activity_name;		item_image = data.activity_image;	} else if( data.book_id > 0 ) {		href = '"{"library/view"|site_url}?id='+data.book_id+'"';		item_name = data.book_name;		item_image = data.book_image;	}	var str = '<div class="waterfall-item" id="item-'+id+'">'+'<a href='+href+'>'+'<img src="'+item_image+'" class="img-rounded"></a>'+'<h4><a href='+href+'>'+item_name+'</a></h4>'+'<div class="waterfall-item-bottom">'+data.message+'</div></div>';	return str;}</script>