<div class="history-container"><div class="content-heading">{$title}</div>{foreach $history as $i}<div class="showcase-item id=item-{$i.activity_id}"><a href="{'activity/view'|site_url}?id={$i.activity_id}"><img src="{$i.activity_image}" class="img-rounded"></a><div class="item-description">	<h4><a href="{'activity/view'|site_url}?id={$i.activity_id}">{$i.activity_name}</a></h4>	<ul>		<li>时间: {$i.start_time} - {$i.end_time}</li>		<li>发起人: <a href="{'member'|site_url}?id={$i.member_id}">{$i.member_name}</a></li>		<li><code>{$i.attend_count}</code>人参与&nbsp;&nbsp;|&nbsp;&nbsp;<code>{$i.attention_count}</code>人关注</li>		<li>描述: {$i.description}</li>	</ul></div></div><div class="clear"></div><hr>{/foreach}</div><!--/history-container--><div class="pagination">	{include file="default/common/pagination.tpl"}</div>