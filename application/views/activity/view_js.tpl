<script>function followActivity(activity_id) {    $.getJSON("{'activity/followActivity'|site_url}?id="+activity_id,function(data){      if( data ) {      	if( data==1 )      		alert('成功关注活动！');      	else if( data==2 )      		alert('成功取消关注！');      }      window.location.reload();    });}//ctrl+enter 提交回复$("#comment-content").keydown(function (e) {   if (e.ctrlKey && e.keyCode == 13) {     addComment();  }});$("#comment-submit").click(function() {   addComment();});$('#modal-reply-submit').click(function() {  submitReply();})$('#enable-change').click(function(){  $('.to-be-changed').removeAttr('disabled');  $('#going-to-change').val('Y');})$('#introduction').tooltip( {  title : '这里的修改不会影响你的个人资料~',  placement: 'right',  trigger: 'focus'});var prev_page = {$page_information.page};var theCommentId = -1;function addReply(comment_id) {  theCommentId = comment_id;  var content = $('#m-'+theCommentId+'>.comment-content').html();  $('#modal-reply-heading').html( '回复问题 #'+theCommentId );  $('#modal-reply-content').html( '<b>问题内容：</b>'+content);  $('#modal-reply').modal('show');}function submitReply() {  reply = $("#modal-reply-reply").val();  activity_id = {$activity_information.activity_id};  if(!reply) {     alert("回复内容不能为空！");    return;  }  $.getJSON("{'activity/ajaxAddReply'|site_url}", { "activity_id":activity_id, "activity_comment_id":theCommentId, "reply":reply }, function(data) {    newReply = '<tr><td class="comment-heading"></td><td class="comment-reply">'+reply+'</td></tr>';    $('#m-'+theCommentId).after(newReply);  });  $('#modal-reply-reply').val('');  $('#modal-reply').modal('hide');}function addComment() {   activity_id = {$activity_information.activity_id};  content = $("#comment-content").val();  if(!content) {     alert("提问内容不能为空！");    return;  }  $.getJSON("{'activity/ajaxAddComment'|site_url}", { "activity_id":activity_id, "content":content }, function(data) {     newComment = wrapComment(data);    $("#comment-tbody").prepend( newComment );  });  $("#comment-content").val('');}function loadPage(page){     activity_id = {$activity_information.activity_id};    limit = {$page_information.limit};    page_offset = (page-1) * {$page_information.limit};        $.getJSON("{'activity/ajaxGetComment'|site_url}",{ "activity_id":activity_id, "page_offset":page_offset }, function(data){       $("#comment-tbody").empty();      for( i in data ) {        item = wrapComment( data[i] );        $("#comment-tbody").append( item );      }      $("#p-"+prev_page).removeClass("active");      $("#p-"+page).addClass("active");      prev_page = page;    });}function wrapComment(data) {  var item = '<tr id="m-'+data.comment_id+'">'            +'<td class="comment-heading">'            +'<img src="'+data.member_image+'" alt="'+data.member_name+'" class="avatar-medium"><a href="{"profile"|site_url}"?id='+data.member_id+'>'+data.member_name+'</a>'            +'</td>'            +'<td class="comment-content">'+data.content+'</td>'            +'<td class="comment-timestamp">'+data.created_time+'</td>'            +'<td class="comment-reply-btn">';  {if $activity_information.is_publisher}  if( data.member_id!={$current_member_id} )    item +='<a href="#reply-box" class="act" onclick="addReplyTo(\''+data.member_name+'\')">回复</a>';  {/if}  item += '</td></tr>';  return item;}</script>