<script>	$(function(){		$("#member_search .member_type ul li a").click(function(){			$("#member_search .member_type ul li a").removeClass('active');			$(this).addClass('active');		});				$("#activity_search .activity_type ul li a").click(function(){			$("#activity_search .activity_type ul li a").removeClass('active');			$(this).addClass('active');		});			});		function searchMemberBySchoolId(action_type,school_id){		if (action_type == 'search_member') {			$('#member_search_content .member_search_show').fadeOut('slow');			$('#member_search_content .member_search_show').remove();			if (school_id != '') {				var member_type = $("#member_search .member_type ul li a:first-child").attr('value');				$.ajax({					url:"__('base_ajax_action_controller/getMemberInformationBySchoolId'|site_url)__",					data:'school_id='+school_id+'&member_type='+member_type,					type: "GET",					dataType: "JSON",					async: false,					success:function(data){						var n = 0;						member_search_content = new Array();						for(i in data){							var member_search_show = '<div class=\"member_search_show\" id="member_search_'+n+'" >'+																	'<div class=\"image\"><img src=\"'+data[i].member_image+'\" width=\"105\" height=\"105\"></div>'+																	'<div class="context">'+																		'<div class="title"><a href="#__("activity/view"|site_url)__?id='+data[i].member_id+'">'+data[i].member_name+'</a></div>'+																	'</div>'+																'</div>';							member_search_content[n] = member_search_show;							n++;						}												$("#member_search_content").append(member_search_content[0]);						$("#member_search_content").append(member_search_content[1]);						$("#member_search_content").append(member_search_content[2]);						$("#member_search_content").append(member_search_content[3]);												$('#member_search_content .member_search_show').fadeIn('slow');						current_member_search = 3;						getActivityBySearchFields(school_id,'');					}				});											}else {				alert('suantou');			}		} else {			if (member_search_content.length > 4) {				if (action_type == 'right') {					$('#member_search_content .member_search_show').fadeOut('slow');					$('#member_search_content .member_search_show').remove();					for (i = 1; i <= 4 ; i++ ){						if (current_member_search + 1 < member_search_content.length) {							current_member_search++;							$("#member_search_content").append(member_search_content[current_member_search]);						} else {							current_member_search = 0;							$("#member_search_content").append(member_search_content[current_member_search]);						}					}					$('#member_search_content .member_search_show').fadeIn('slow');									} else if (action_type == 'left'){					$('#member_search_content .member_search_show').fadeOut('slow');					$('#member_search_content .member_search_show').remove();					if (current_member_search - 3 > 0) {						current_member_search = current_member_search - 3;					} else {						current_member_search = current_member_search + member_search_content.length - 3;					}											for (i = 1; i <= 4 ; i++ ){						if (current_member_search - 1 >= 0) {							current_member_search--;							$("#member_search_content").prepend(member_search_content[current_member_search]);						} else {							current_member_search = member_search_content.length - 1;							$("#member_search_content").prepend(member_search_content[current_member_search]);						}					}					if (current_member_search - 3 > 0) {						current_member_search = current_member_search - 3;					} else {						current_member_search = current_member_search + member_search_content.length - 3;					}					$('#member_search_content .member_search_show').fadeIn('slow');				}			}		}	}		function getActivityBySearchFields(school_id,member_id){		$('#activity_search_content .activity_search_show').fadeOut('slow');		$('#activity_search_content .activity_search_show').remove();		if (school_id != '' || member_id != '') {							var activity_type = $("#activity_search .activity_type ul li a.active:first-child").attr('value');			$.ajax({				url:"__('base_ajax_action_controller/getActivityInformationBySearchFields'|site_url)__",				data:'school_id='+school_id+'&member_id='+member_id+'&activity_type='+activity_type,				type: "GET",				dataType: "JSON",				async: false,				success:function(data){					var n = 0;					for(i in data){						var activity_search_show = '<div class=\"activity_search_show\" id="activity_search_'+n+'" >'+																'<div class=\"image\"><img src=\"'+data[i].activity_image+'\" width=\"120\" height=\"160\"></div>'+																'<div class="context">'+																	'<div class="title"><a href="__("activity/view"|site_url)__?id='+data[i].activity_id+'">'+data[i].activity_name+'</a></div>'+																	'<div class="start_time">开始时间: '+data[i].start_time+'</div>'+																	'<div class="end_time">结束时间: '+data[i].end_time+'</div>'+																	'<div class="publisher">'+data[i].member_name+'</div>'+																	'<div class="number">'+																		'<div class="attend_number"><span>'+data[i].attend_number+'</span>人参加</div>'+																		'<div class="attention_number"><span>'+data[i].attention_number+'</span>人关注</div>'+																	'</div>'+																'</div>'+																'<div class=\"clear\"></div>'+															'</div>';						$("#activity_search_content").append(activity_search_show);						$('#activity_search_content .activity_search_show').fadeIn('slow');						n++;					}				}			});								}else {			alert('suantou');		}	}</script><script>	$(function(){		searchMemberBySchoolId('search_member','__($school_id)__');		});</script><div id="page_frame" class="search_page">	<div class="left_side">		__(include file="__($template)__/layout/menu_box.tpl")__	</div>		<div class="right_side">				<div class="member_search" id="me