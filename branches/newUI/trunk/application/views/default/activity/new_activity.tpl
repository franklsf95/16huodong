<div id="two_frame">	<div id="frame_l">		__(include file="__($template)__/layout/menu_box.tpl")__	</div>		<div id="frame_r">		<div class="location">			<a href="__('activity'|site_url)__">活动</a> > <a href="__('activity/new_activity'|site_url)__">最新活动</a>		</div>				<div class="new_activity_box">			<ul>				__(foreach name=all_new_activity_information from=$all_new_activity_information item=new_activity_information)__				<li>					<div class="new_activity">						<div class="activity_name">							<a href="__('activity/view'|site_url)__?id=__($new_activity_information.activity_id)__">__($new_activity_information.activity_name)__</a>							<span class="time">__($new_activity_information.created_time|date_format:"%Y-%m-%d")__</span>						</div>						<div class="publisher">							<img src="__($new_activity_information.member_image)__" height="50" width="50" /><br>							<a href="__('member'|site_url)__?id=__($new_activity_information.member_id)__">__($new_activity_information.member_name)__</a>						</div>						<div class="activity_description">							<div class="activity_ico">								__($new_activity_information.description)__							</div>						</div>												<div class="clear"></div>					</div>					<div class="clear"></div>				</li>				__(/foreach)__			</ul>						<div class="pagination">				__(assign var="index_page_name" value="activity/new_activity")__				__(include file="default/layout/pagination.tpl")__			</div>					</div>							</div></div>